  },
  "devDependencies": {
    "@riotjs/ssr": "^4.2.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "esm": "^3.2.25",

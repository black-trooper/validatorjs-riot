{
  "name": "validatorjs-riot",
  "version": "0.0.2",
  "description": "Validatorjs for Riot",
  "main": "dist/validatorjs-riot.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run clean && npm run dev-watch & npm run test-watch",
    "dev": "webpack --mode development",
    "dev-watch": "webpack --mode development --watch --hot",
    "prod": "webpack --mode production",
    "clean": "rimraf ./coverage && rimraf ./dist/*hot-update.*",
    "test": "npm run clean && karma start",
    "test-watch": "karma start --no-single-run",
    "build": "npm run test && npm run dev && npm run prod"
  },
  "keywords": [
    "riotjs",
    "riot",
    "validatorjs",
    "validator"
  ],
  "author": {
    "name": "black-trooper",
    "url": "https://github.com/black-trooper/validatorjs-riot/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/black-trooper/validatorjs-riot.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/black-trooper/validatorjs-riot/issues"
  },
  "dependencies": {
    "validatorjs": "^3.15.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "cryptiles": "^4.1.3",
    "eslint": "^5.10.0",
    "eslint-loader": "^2.1.1",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jquery": "^3.3.1",
    "karma": "^3.1.3",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-coveralls": "^2.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-riot": "^2.0.0",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "sinon": "^7.2.2",
    "sinon-chai": "^3.3.0",
    "webpack": "^4.27.1",
    "webpack-cli": "^3.1.2"
  }
}
